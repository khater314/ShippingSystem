@using AppResources.Localization.Resources

<div class="content-wrapper">
    <div class="page-header">
        <h3 class="page-title">
            <span class="page-title-icon bg-gradient-primary text-white me-2">
                <i class="mdi mdi-home"></i>
            </span> 

        </h3>
        <nav aria-label="breadcrumb">
            <ul class="breadcrumb">
                <li class="breadcrumb-item active" aria-current="page">
                    <span></span>  <i class="mdi mdi-alert-circle-outline icon-sm text-primary align-middle"></i>
                </li>
            </ul>
        </nav>
    </div>
    <div class="row">
        <div class="col-md-4 stretch-card grid-margin">
            <div class="card bg-gradient-danger card-img-holder text-white">
                <div class="card-body">
                    <img src="~/admin/images/dashboard/circle.svg" class="card-img-absolute" alt="@ResShared.Alt_CircleImage" />
                    <h4 class="font-weight-normal mb-3">
                        @ResShared.WeeklySales <i class="mdi mdi-chart-line mdi-24px float-end"></i>
                    </h4>
                    <h2 class="mb-5">@ResShared.SalesAmount</h2>
                    <h6 class="card-text">@ResShared.IncreasedBy60</h6>
                </div>
            </div>
        </div>
        <div class="col-md-4 stretch-card grid-margin">
            <div class="card bg-gradient-info card-img-holder text-white">
                <div class="card-body">
                    <img src="~/admin/images/dashboard/circle.svg" class="card-img-absolute" alt="@ResShared.Alt_CircleImage" />
                    <h4 class="font-weight-normal mb-3">
                        @ResShared.WeeklyOrders <i class="mdi mdi-bookmark-outline mdi-24px float-end"></i>
                    </h4>
                    <h2 class="mb-5">@ResShared.OrdersCount</h2>
                    <h6 class="card-text">@ResShared.DecreasedBy10</h6>
                </div>
            </div>
        </div>
        <div class="col-md-4 stretch-card grid-margin">
            <div class="card bg-gradient-success card-img-holder text-white">
                <div class="card-body">
                    <img src="~/admin/images/dashboard/circle.svg" class="card-img-absolute" alt="@ResShared.Alt_CircleImage" />
                    <h4 class="font-weight-normal mb-3">
                        @ResShared.VisitorsOnline <i class="mdi mdi-diamond mdi-24px float-end"></i>
                    </h4>
                    <h2 class="mb-5">@ResShared.VisitorsCount</h2>
                    <h6 class="card-text">@ResShared.IncreasedBy5</h6>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-7 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <div class="clearfix">
                        <h4 class="card-title float-start">@ResShared.VisitAndSalesStatistics</h4>
                        <div id="visit-sale-chart-legend" class="rounded-legend legend-horizontal legend-top-right float-end"></div>
                    </div>
                    <canvas id="visit-sale-chart" class="mt-4"></canvas>
                </div>
            </div>
        </div>
        <div class="col-md-5 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">@ResShared.TrafficSources</h4>
                    <canvas id="traffic-chart"></canvas>
                    <div id="traffic-chart-legend" class="rounded-legend legend-vertical legend-bottom-left pt-4"></div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-12 grid-margin">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">@ResShared.RecentTickets</h4>
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th> @ResShared.Th_Assignee </th>
                                    <th> @ResShared.Th_Subject </th>
                                    <th> @ResShared.Th_Status </th>
                                    <th> @ResShared.Th_LastUpdate </th>
                                    <th> @ResShared.Th_TrackingId </th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>
                                        <img src="~/admin/images/faces/face1.jpg" class="me-2" alt="@ResShared.Alt_Image"> @ResShared.User_DavidGrey
                                    </td>
                                    <td> @ResShared.FundNotReceived </td>
                                    <td>
                                        <label class="badge badge-gradient-success">@ResShared.Status_Done</label>
                                    </td>
                                    <td> @ResShared.Date_Dec52017 </td>
                                    <td> @ResShared.Tracking_WD12345 </td>
                                </tr>
                                <tr>
                                    <td>
                                        <img src="~/admin/images/faces/face2.jpg" class="me-2" alt="@ResShared.Alt_Image"> @ResShared.User_StellaJohnson
                                    </td>
                                    <td> @ResShared.HighLoadingTime </td>
                                    <td>
                                        <label class="badge badge-gradient-warning">@ResShared.Status_Progress</label>
                                    </td>
                                    <td> @ResShared.Date_Dec122017 </td>
                                    <td> @ResShared.Tracking_WD12346 </td>
                                </tr>
                                <tr>
                                    <td>
                                        <img src="~/admin/images/faces/face3.jpg" class="me-2" alt="@ResShared.Alt_Image"> @ResShared.User_MarinaMichel
                                    </td>
                                    <td> @ResShared.WebsiteDownOneWeek </td>
                                    <td>
                                        <label class="badge badge-gradient-info">@ResShared.Status_OnHold</label>
                                    </td>
                                    <td> @ResShared.Date_Dec162017 </td>
                                    <td> @ResShared.Tracking_WD12347 </td>
                                </tr>
                                <tr>
                                    <td>
                                        <img src="~/admin/images/faces/face4.jpg" class="me-2" alt="@ResShared.Alt_Image"> @ResShared.User_JohnDoe
                                    </td>
                                    <td> @ResShared.LoosingControlOnServer </td>
                                    <td>
                                        <label class="badge badge-gradient-danger">@ResShared.Status_Rejected</label>
                                    </td>
                                    <td> @ResShared.Date_Dec32017 </td>
                                    <td> @ResShared.Tracking_WD12348 </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-5 grid-margin stretch-card">
            <div class="card">
                <div class="card-body p-0 d-flex">
                    <div id="inline-datepicker" class="datepicker datepicker-custom"></div>
                </div>
            </div>
        </div>
        <div class="col-lg-7 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">@ResShared.RecentUpdates</h4>
                    <div class="d-flex">
                        <div class="d-flex align-items-center me-4 text-muted font-weight-light">
                            <i class="mdi mdi-account-outline icon-sm me-2"></i>
                            <span>@ResShared.User_JackMenqu</span>
                        </div>
                        <div class="d-flex align-items-center text-muted font-weight-light">
                            <i class="mdi mdi-clock icon-sm me-2"></i>
                            <span>@ResShared.Date_Oct032018</span>
                        </div>
                    </div>
                    <div class="row mt-3">
                        <div class="col-6 pe-1">
                            <img src="~/admin/images/dashboard/img_1.jpg" class="mb-2 mw-100 w-100 rounded" alt="@ResShared.Alt_Image">
                            <img src="~/admin/images/dashboard/img_4.jpg" class="mw-100 w-100 rounded" alt="@ResShared.Alt_Image">
                        </div>
                        <div class="col-6 ps-1">
                            <img src="~/admin/images/dashboard/img_2.jpg" class="mb-2 mw-100 w-100 rounded" alt="@ResShared.Alt_Image">
                            <img src="~/admin/images/dashboard/img_3.jpg" class="mw-100 w-100 rounded" alt="@ResShared.Alt_Image">
                        </div>
                    </div>
                    <div class="d-flex mt-5 align-items-top">
                        <img src="~/admin/images/faces/face3.jpg" class="img-sm rounded-circle me-3" alt="@ResShared.Alt_Image">
                        <div class="mb-0 flex-grow">
                            <h5 class="me-2 mb-2">@ResShared.Project_SchoolWebsite_Title</h5>
                            <p class="mb-0 font-weight-light">@ResShared.Project_SchoolWebsite_Description</p>
                        </div>
                        <div class="ms-auto">
                            <i class="mdi mdi-heart-outline text-muted"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
